{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <div class="m-5 d-flex justify-content-center">
        <div class="border border-dark rounded p-3 text-center" style="width: 500px" >
            <h1>Registro</h1>
            {{ form_start(registrationForm) }}
            <label class="form-label">Nombre</label>
            {{ form_row(registrationForm.nombre, { label: ' '}) }}
            <label class="form-label">Apellidos</label>
            {{ form_row(registrationForm.apellidos, { label: ' '}) }}
            <label class="form-label">Email</label>
            {{ form_row(registrationForm.email, { label: ' '}) }}
            <label class="form-label">Contrase√±a</label>
            {{ form_row(registrationForm.plainPassword, { label: ' '}) }}
            <label class="form-label">Telefono</label>
            {{ form_row(registrationForm.telefono, { label: ' '}) }}
            <p>{{ form_row(registrationForm.foto, { label: ' '}) }}</p>
            <button type="submit" class="btn btn-dark w-100">Registrar</button>
            {{ form_end(registrationForm) }}
        </div>
    </div> 
{% endblock %}
