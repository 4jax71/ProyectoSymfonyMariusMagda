{% extends 'base.html.twig' %}

{% block title %}Incidencias{% endblock %}

{% block body %}





    <div class="container text-center my-5">
        <table class="table table-dark table-striped my-2 text-center">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% if incidencias is not empty %}
                    {% for i in incidencias %}
                        <tr>
                            <th scope="row">{{ i.id }}</th>
                            <td>
                                <a class="btn btn-secondary" href="{{ path("app_clientes_ver", {id: i.cliente.id}) }}">{{ i.cliente.nombre }}</a>
                            </td>
                            <td>
                                <a class="btn btn-secondary" href="{{ path("app_incidencias_ver", {id: i.id}) }}">{{ i.titulo}}</a>
                            </td>
                            <td>{{ i.fecha|date('d-m-Y H:i') }}</td>
                            <td>{{ i.estado }}</td>
                            <td>
                                <a class="btn btn-danger" href="{{ path("app_incidencias_borrar", {id: i.id}) }}"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td scope="row" colspan="6" class="text-center">______________________________________</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
        <a href="{{ path('app_incidencias_insertar') }}" class="btn btn-dark w-100 my-2"><h1>Insertar Incidencia</h1></a>
    </div>

{% endblock %}
